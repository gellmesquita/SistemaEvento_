    </header>
    <main class="pt-3 pt-md-3">
      <section>
        <div class=" px-3 d-flex justify-content-between align-items-end pb-3"
          style="border-radius: 15px;background-position: center; background: url('http://localhost:1000/upload/bb.jpg'); background-size: cover; height:60vh">

          <h1 class="display-6 text-white-50">Voce pesquisou por: <%= query  %>  </h1>
          <div class="text-white fs-3">

            <a href="" class="text-white"><i class="fa fa-facebook-square px-2 py-2 rounded-pill border"></i></a>
            <a href="" class="text-white"><i class="fa fa-whatsapp px-2 py-2 rounded-pill border"></i></a>
            <a href="" class="text-white"><i class="fa fa-instagram  px-2 py-2 rounded-pill border"></i></a>

          </div>
        </div>
      </section>


      <section class="container mt-5 pt-3">
        <h1 class="tec">Eventos</h1>
        <div class="">
          <h5 class="mb-3">Eventos "<%= query  %>" (<%= eventos.length %> encontrados)</h5>

          <div class="row">
            <% eventos.filter(c=>(c.realizado=="0")).reverse().map(evento=>{%>
              <div class="col-md-3 mb-3 h-100">
                <div class="card shadow p-2">
                  <img height="200vh" src="http://localhost:1000/upload/<%= evento.image %>"  alt="">
                  <div>
                    <p class="text-danger mt-2 mb-0" style="font-size:14px"><%= evento.endereco %>, <%= evento.data %></p>
                    <p class="mb-0"><%= evento.name %></p>
                    <span><%= evento.desc.substring(0, 50) %>...</span>
                    <br>
                    <a style="text-decoration: none;" href="/viewevento/<%= evento.id %>">ver mais...</a>
                  </div>
                </div>
              </div>                
            
              <%} ) %> 
          </div>

        </div>
      </section>


      <section class="container mt-5 pt-5">
        <h1 class="tec">Promotores e Categorias</h1>

        <div class="">
          <h5 class="mb-3">Categoria "<%= query %>" (<%= categoria.length %> encontrados)</h5>
          <div class="row">
            <% categoria.reverse().map(evento=>{%>
              <div class="col-md-3 mb-3 h-100">
                <div class="card shadow p-2">
                  <img height="200vh" src="http://localhost:1000/upload/<%= evento.imageCategoria %>"  alt="">
                  <div>
                    <h5 class="mb-0"><%= evento.nomeCategoria %></h5>
   
                    <a style="text-decoration: none;" href="/categoria/<%= evento.nomeCategoria %>">ver mais...</a>
                  </div>
                </div>
              </div>                
            
              <%} ) %>  
          </div>

            <div class="">
                <h5 class="mb-3">Promotor "<%= query  %>" (<%= promotores.length %> encontrados)</h5>
      
                <div class="row">
                  <% promotores.reverse().map(evento=>{%>
                    <div class="col-md-3 mb-3 h-100">
                      <div class="card shadow p-2">
                        <img height="200vh" src="http://localhost:1000/upload/<%= evento.image %>"  alt="">
                        <div>
                          <p class="text-danger mt-2 mb-0" style="font-size:14px"><%= evento.endereco %>, <%= evento.data %></p>
                          <p class="mb-0"><%= evento.name %></p>
                          <span><%= evento.descricao.substring(0, 50) %>...</span>
                          <br>
                          <a style="text-decoration: none;" href="promotor/<%= evento.id %>">ver mais...</a>
                        </div>
                      </div>
                    </div>                
                  
                    <%} ) %> 
                </div>
      
              </div>


        </div>
      </section>



    </main>

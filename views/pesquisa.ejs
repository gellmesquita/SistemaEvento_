          <form action="/pesquisar" method="post"class="col-12 d-flex align-items-center col-lg-auto mb-3 mb-lg-0 me-lg-3">
            <!--  -->
            <input type="search" name="query"class="form-control rounded-pill" placeholder="Pesquisar eventos, shows, teatros..."
              aria-label="Search">
              <button class="btn btn-primary ms-1 rounded-pill"type="submit">
                <i  class="fa fa-search fs-5 text-" style="transform: rotate(95deg);"></i>
              </button>
          </form>


  <script>
    const Toast = Swal.mixin({
      toast: true,
      position: 'top-right',
      iconColor: 'white',
      customClass: {
        popup: 'colored-toast'
      },
      showConfirmButton: false,
      timer: 1500,
      timerProgressBar: true
    })
    const contaExiste = '<%=contaExiste%>'
    const sucesso = '<%=sucesso%>'
    const ErroConvidado = '<%=ErroConvidado%>';
    const  ErroCampo = '<%= ErroCampo%>';
   
    if (contaExiste.length > 0) {
      Toast.fire({
        icon: 'error',
        title: contaExiste
      })
    }
    if (sucesso.length > 0) {
      Toast.fire({
        icon: 'success',
        title: 'Pedido foi enviado, aguarde a confirmação'
      })
    }
    if (ErroConvidado.length > 0) {
      Toast.fire({
        icon: 'error',
        title: ErroConvidado
      })
    }
    if (ErroCampo.length > 0) {
      Toast.fire({
        icon: 'error',
        title: ErroCampo 
      })
    }


  </script>

